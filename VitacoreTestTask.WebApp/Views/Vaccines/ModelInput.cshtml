@model Vaccine

<div>
    <form method="post" asp-action="@ViewBag.Action">
        <h2>Добавление/редактирование записи</h2>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Наименование</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col">
                <label asp-for="IsMandatory">Обязательна</label>
                <input asp-for="IsMandatory" />
            </div>            
            <span asp-validation-for="IsMandatory" class="text-danger"></span>
        </div>
        <div class="text-center">
            <input class="btn btn-primary m-1" type="submit" value="Сохранить" />
        </div>
    </form>
</div>
